@model IEnumerable<Presentacion.Models.ReservaModel>

@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    ViewData["Title"] = "Reserva(s)";
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdReserva)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodReserva)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaEntrada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaSalida)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CantidadAdultos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CantidadNinos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CedulaCliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodHabitacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecioHabitacion)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IdReserva</td>
                <td>@item.CodReserva</td>
                <td>@item.FechaEntrada</td>
                <td>@item.FechaSalida</td>
                <td>@item.CantidadAdultos</td>
                <td>@item.CantidadNinos</td>
                <td>@item.CedulaCliente</td>
                <td>@item.CodHabitacion</td>
                <td>@item.PrecioHabitacion</td>
            </tr>
        }
    </tbody>
</table>


<div>
    <a asp-action="Consultar" asp-controller="Reserva">Nueva búsqueda</a>
</div>
