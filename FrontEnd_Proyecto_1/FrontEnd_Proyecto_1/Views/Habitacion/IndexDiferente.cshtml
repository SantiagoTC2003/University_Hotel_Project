@model IEnumerable<FrontEnd_Proyecto_1.Models.HabitacionModel>

@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    ViewData["Title"] = "IndexDiferente";
}

<h1>Consulta de Habitaciones</h1>

<div class="row">

    @foreach (var item in Model)
    {
    <div class="habitacion">
        <p>Habitación @Html.DisplayFor(modelItem => item.CodHabitacion)</p>
        <p>@Html.DisplayFor(modelItem => item.TipoHabitacion)</p>
        <p>Capacidad @Html.DisplayFor(modelItem => item.CapacidadHabitacion)</p>

        <a href="@Url.Action("EditarHabitacion", "Habitacion", new { item.CodHabitacion })">

            @if (item.EstadoHabitacion.Equals("No reservada"))
            {
                switch (item.TipoHabitacion)
                {
                    case "Pequeña":

                        <img src="/img/GrandeDisponible.png" alt="Alternate Text" />

                        break;
                    case "Mediana":

                        <img src="/img/MedianaDisponible.png" alt="Alternate Text" />

                        break;
                    case "Grande":

                        <img src="/img/PequeñaDisponible.png" alt="Alternate Text" />

                        break;
                    default:
                        break;
                }

            }
            else
            {
                switch (item.TipoHabitacion)
                {
                    case "Pequeña":

                        <img src="/img/GrandeReservada.png" alt="Alternate Text" />

                        break;
                    case "Mediana":

                        <img src="/img/MedianaReservada.png" alt="Alternate Text" />

                        break;
                    case "Grande":

                        <img src="/img/PequeñaReservada.png" alt="Alternate Text" />

                        break;
                    default:
                        break;
                }
            }
        </a>

    </div>
    }

</div>

