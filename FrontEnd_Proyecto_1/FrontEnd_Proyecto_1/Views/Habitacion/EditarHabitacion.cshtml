@model FrontEnd_Proyecto_1.Models.HabitacionModel

@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    ViewData["Title"] = "EditarHabitacion";
}

<h1>Editar Habitacion</h1>

<h4>Ingrese los datos:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Modificar" asp-controller="Habitacion" method="post" class="col-md-12">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CodHabitacion" class="control-label"></label>
                <input asp-for="CodHabitacion" readonly="readonly" class="form-control" />
                <span asp-validation-for="CodHabitacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoHabitacion" class="control-label"></label>
                <input asp-for="TipoHabitacion" class="form-control" />
                <span asp-validation-for="TipoHabitacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CapacidadHabitacion" class="control-label"></label>
                <input asp-for="CapacidadHabitacion" class="form-control" />
                <span asp-validation-for="CapacidadHabitacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstadoHabitacion" class="control-label"></label>
                <input asp-for="EstadoHabitacion" class="form-control" />
                <span asp-validation-for="EstadoHabitacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Modificar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
